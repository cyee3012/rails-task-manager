<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p><%= link_to "Edit this tasks", edit_task_path %></p>
<p><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
<p><%= link_to "Back to tasks", tasks_path %></p>
